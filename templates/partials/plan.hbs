<div class="prompt-wrapper" id="{{promptId}}">

	<div class="row prompt">

		<h4>Think up a big question around which your plan will revolve!</h4>

		<textarea name="text" rows="4" cols="14" wrap="soft" maxlength="300" id="prompt-input" placeholder="big question"></textarea>
				
	</div>

	<div class="icon-wrap planner">
		<p>Scroll through icons and select which ones you would like in your plan!</p>

		<div class="icon-input section row">
			<div class="icon-feed" style="height:{{scrollHeight icons}}">

				{{#each icons}}

				<div class="icon" id="{{this._id}}">

					<div class="send-icon"></div>

					<img src="{{{cloudinaryUrl this.icon width=100 height=100 crop='scale' quality=100}}}" alt="{{this.name}}" class="event-photo" style="margin:0 auto;">

				</div>

				{{/each}}

			</div>
			
		</div>

		<input type="file" class="icon-upload">

	</div>

	<a id="save-plan">save plan</a>
	<a id="launch-plan">launch plan</a>

</div>

<div class="saved" style="display:none;">Plan Saved</div>


