<div class="container-fluid present">
	<div class="col-lg-3" style="color: white;">
		
	</div>

	<div class="prompt-wrapper col-lg-9" id="{{prompt_key}}">

		<div class="row prompt">

			<input type="text" value="{{prompt.prompt}}">
					
		</div>

		<div class="row grid icons" id="icon-group">

			{{#each icons}}

			<div class="icon">

				<div class="send-icon"></div>

				<img src="{{{cloudinaryUrl this.icon width=100 height=100 crop='scale' quality=100}}}" alt="{{this.name}}" class="event-photo" style="margin:0 auto;">

			</div>

			{{/each}}

		</div>

	</div>


</div> <!-- .container-fluid -->