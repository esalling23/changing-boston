<div class="container-fluid home">

	<div class="prompt-input row">

		<div class="text">
		<h3>Welcome to PlaceBase!</h3>
		<h4>To start, choose a plan from the dropdown and hit go!</h4>
		</div>
		{{!-- <p>Allow geolocation or enter your location below:</p>
		<div class="row">
			<input id="user_location">
		</div> --}}
		<div class="btn-group clearfix">
			<button id="prompt-select" class="plan-options btn btn-default dropdown-toggle" type="button" data-filter-group="" data-toggle="dropdown">
				<div class="button-text">Select an open PlaceBase <span class="plan-number filter-counter"> </span><span class="bigCaret"></span></div>
			</button>
			<ul class="dropdown-menu scrollable" role="menu">
				{{#each prompt}}
					{{#ifeq enabled true}}
					<li><a id="{{promptId}}" class="option-plan">{{prompt}}</a></li>
					{{/ifeq}}
				{{/each}}
			</ul>
		</div>

		{{!-- <div id="map"></div> --}}

		<a id="prompt-choice" class="btn btn-big">Go</a>		
			
	</div> <!-- .prompt-input -->


	<div class="response-input row" id="response-input" style="display:none;">
	</div> <!-- .response-input -->

	<div class="placebase row" id="placebase-live" style="display:none;">
	</div> <!-- .response-input -->


</div> <!-- .container-fluid -->
