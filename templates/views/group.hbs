<div class="container-fluid home">

	<div class="row" style="color: white;">

		{{group.title}}
		
	</div>

	<div class="row">

		{{group.text}}

	</div>

	<div class="row select">

		{{!-- buttons for start new or continue --}}
		<input class="hidden-el" type="text" id="name_input" placeholder="name" tabindex="1"> <br />
		<input class="hidden-el" type="text" id="email_input" placeholder="email" tabindex="2"> <br />
	    <input class="hidden-el" type="text" id="password_input" placeholder="password" tabindex="3"> <br />
	    <div class="error">Error!</div>
	    <input id="btn_login" data-event="game:entry" data-package='{"email": "#email_input", "pass": "#password_input"}' class="btn btn-default desktop-only game_login hidden-el" type="submit" name="submit" value="login">
	    <input id="btn_signup" data-event="game:entry" data-package='{"email": "#email_input", "pass": "#password_input"}' class="btn btn-default desktop-only game_login hidden-el" type="submit" name="submit" value="signup">

	</div>

</div> <!-- .container-fluid -->